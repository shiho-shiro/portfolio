<div class="container">
  <div class="row">
    <div class="col-lg-12 d-md-flex justify-content-between border-bottom mt-4">
      <h2 class="col-md-6 text-center text-md-left font-italic"><%= t('.forgot_your_password') %></h2>
    </div>
  </div>
  <%= form_with(model: @user, url: user_password_path, local: true) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <p class="alert text-danger text-center text-md-left"><%= alert %></p>
    <div class="row mt-4 py-4 border">
      <div class="col-12">
        <div class="form-group text-center text-md-left d-block pb-4">
          <%= f.label :email, class:"font-italic" %>
          <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class:"form-control" %>
        </div>
        <div class="my-3  d-md-flex justify-content-md-around align-items-md-baseline w-100">
          <div class="mb-4">
            <%= f.submit t('.send_me_reset_password_instructions'), class:"col-12 btn btn-outline-success py-2 submit_overflow" %>
          </div>
        </div>
        <div class="text-center text-md-left mb-4">
          <%= render 'devise/shared/links' %>
        </div>
      </div>
    </div>
  <% end %>
</div>

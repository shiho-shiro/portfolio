<div class="container">

  <div class="row">
    <h2 class="col-lg-12 text-center text-md-left mt-4 font-italic border-bottom">アカウント</h2>
  </div>

  <div class="row">
    <div class="col-12 col-md-3 col-lg-2 p-1 h-25 text-center d-md-block">
      <div class="text-center py-3 py-md-3 ">
        <% if @user.image.attached? %>
          <%= image_tag @user.image, class:"img-fluid img-thumbnail" %>
        <% else %>
          <%= image_tag 'no_image.jpg', class:"img-fluid" %>
        <% end %>
      </div>
      <div class="d-md-block col-md-12 col-lg-12 py-1 py-md-3">
        <%= link_to "編集する", edit_user_registration_path, class: "btn btn-outline-primary btn-sm py-2 px-5 px-md-4" %>
      </div>
    </div>

    <div class="col-lg-10 col-md-8">
      <div class="col-12 mt-3  border">
        <ul class="list-group text-center">
          <li class="list-group-flush list-unstyled py-2 mb-2">
            <span class="font-weight-bold">User_Name:</span>
            <span class="d-block d-md-inline-block ml-md-3">
              <span class="border-bottom ml-md-2 font-weight-bold"><%= @user.username %></span>
            </span>
          </li>

          <li class="list-group-flush list-unstyled py-2 mb-2">
            <span class="font-weight-bold">Country<span class="small">(行ったことがある/行ってみたい)</span>:
            </span>
            <span class="d-block d-md-inline-block ml-md-3">
              <span class="border-bottom ml-md-2 font-weight-bold"><%= @user.country_name %></span>
            </span>
          </li>

          <li class="list-group-flush list-unstyled py-2 mb-2">
            <span class="font-weight-bold">Job<span class="small">(経験がある/経験してみたい)</span>:
            </span>
            <span class="d-block d-md-inline-block ml-md-3">
              <span class="border-bottom ml-md-2 font-weight-bold"><%= @user.job %></span>
            </span>
          </li>

          <li class="list-group-flush list-unstyled py-2 mb-2">
            <span class="font-weight-bold">Email:</span>
            <span class="d-block d-md-inline-block ml-md-3">
              <span class="border-bottom ml-md-2 font-weight-bold"><%= @user.email %></span>
            </span>
          </li>

          <li class="list-group-flush list-unstyled py-2 mb-2">
            <span class="font-weight-bold">PassWord:</span>
            <span class="d-block d-md-inline-block ml-md-3">
              <span class="border-bottom ml-md-2 font-weight-bold">*********</span>
            </span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

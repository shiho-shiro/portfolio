<div class="container">
  <div class="row">
    <h2 class="col-lg-12 text-center text-md-left mt-4 font-italic border-bottom">通知</h2>
  </div>

  <div class="row notiction">
    <div class="col-12">
      <% notifications = @notifications.where.not(visiter_id: current_user.id) %>
      <div class="text-right">
        <%= link_to "通知削除", notification_path(@notifications), method: :delete, class: "fas fa-trash p-2 m-2 text-danger border border-danger" %>
      </div>
      <% if @notifications.exists? %>
        <div class="notification-index">
          <%= render @notifications %>
        </div>
      <% else %>
        <span class="text-center">
          <p>通知はありません</p>
        </span>
      <% end %>
    </div>
  </div>
</div>

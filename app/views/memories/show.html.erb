<p>
  <strong>Title:</strong>
  <%= @memory.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @memory.content %>
</p>

<p>
  <strong>Date:</strong>
  <%= @memory.date %>
</p>

<p>
  <% if @memory.image.present? %>
    <%= image_tag @memory.image.url, class:"img-fluid img-thumbnail" %>
  <% end %>
</p>

<% if @user == @memory.user %>
  <%= link_to 'Edit', edit_memory_path(@memory), class: "btn btn-outline-primary btn-sm" %>
  <%= link_to 'Back', memories_path, class: "btn btn-outline-primary btn-sm" %>
  <%= button_to 'Destroy', memory_path, method: :delete, class: "btn btn-outline-danger btn-sm" %>
<% else %>
  <%= link_to 'Back', show_other_index_memory_path(@memory.user.id), class: "btn btn-outline-primary btn-sm" %>
<% end %>

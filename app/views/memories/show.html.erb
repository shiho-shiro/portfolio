<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 mt-3 border-bottom">
      <div class="border-top border-bottom text-center py-3 justify-content-center font-weight-bold">
        <div class="dropdown">
          <button class="btn btn-outline-info dropdown-toggle" type="button" id="contentMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= @memory.title %>
          </button>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="contentMenu">
            <% if @user == @memory.user %>
              <%= link_to '編集する', edit_memory_path(@memory), class: "dropdown-item" %>
              <%= link_to '戻る',memories_path , class: "dropdown-item text" %>
              <%= button_to '削除する', memory_path, method: :delete, class: "dropdown-item" %>
            <% else %>
              <%= link_to '戻る',show_other_index_memory_path(@memory.user.id) , class: "dropdown-item" %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="mt-3">
        <span class="border-bottom"><%= @memory.date %></span>
      </div>
      <div class="d-md-flex pb-md-4 border-bottom">
        <div class="img-fluid my-4 text-center">
          <% if @memory.image.attached? %>
            <%= image_tag @memory.image.variant(resize: '300x300') %>
          <% end %>
        </div>
        <div class="pt-4 py-4 ml-md-4">
          <%= @memory.content %>
        </div>
      </div>
    </div>
  </div>
</div>

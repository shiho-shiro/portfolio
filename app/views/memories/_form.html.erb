<%= form_with(model: @memory, local: true, class:"form-inline d-block") do |f| %>
  <% if @memory.errors.any? %>
    <div class="text-center text-danger font-weight-bold py-3" id="error_explanation">
      <h2><%= pluralize(@memory.errors.count, "件") %>入力ミスがあります。</h2>
      <ul class="list-group">
        <% @memory.errors.each do |error| %>
          <li class="list-group-flush list-unstyled">
            <%= error.full_message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row mt-4 py-sm-4 border">
    <div class="col-12">
      <div class="form-group text-center d-block pb-4">
        <%= f.label :title, class:"justify-content-md-start font-italic" %>
        <%= f.text_field :title, class:"form-control w-100", placeholder:"（20文字以内）" %>
      </div>

      <div class="form-group text-center d-block pb-4">
        <%= f.label :content, class:"justify-content-md-start font-italic" %>
        <%= f.text_area :content, class:"form-control w-100", placeholder:"（300文字以内）" %>
      </div>

      <div class="form-group text-center text-md-left d-block p-sm-2 pb-2 border">
        <%= f.label "日付", class:"d-block justify-content-md-start font-italic" %>
        <%= f.date_select :date, class:"form-control w-auto p-4" %>
      </div>

      <div class="form-group text-center text-md-left d-block mt-4 p-sm-2 pb-2 border">
        <%= f.label :image, class:"d-block justify-content-md-start font-italic" %>
        <%= f.file_field :image, class:"col-10 pl-5 pl-md-0" %>
      </div>

      <div class="text-center text-md-left text-danger">
        <%= f.check_box :remove_image %> 画像を削除
      </div>

      <div class="d-md-flex my-3">
        <div class="col-12 col-md-6 text-center mb-4">
          <%= f.submit "Memoryを投稿する", class:"btn btn-outline-success btn-lg" %>
        </div>
        <div class="col-12 col-md-6 text-center">
          <%= link_to "Memory一覧に戻る", memories_path, class:"btn btn-outline-info btn-lg" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

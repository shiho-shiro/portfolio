<div class="container">
  <div class="row">
    <h2 class="col-lg-12 text-center text-md-left mt-4 font-italic border-bottom">Memory</h2>
  </div>

  <div class="row">
    <div class="col-lg-12 text-center mt-md-4">
      <%= link_to "日記を投稿する", new_memory_path, class:"btn btn-outline-primary btn-sm" %>
    </div>
  </div>

  <% @memories.each do |memory| %>
    <div class="p-4 m-3 border">
      <div class="row align-top">
        <div class="col-lg-12 align-middle d-sm-flex justify-content-sm-between">
          <div class="d-md-inline-block">
            <ul class="list-group">
              <li class="list-group-flush list-unstyled">
                <span class="small"><%= memory.date %></span>
              </li>
              <li class="list-group-flush list-unstyled mt-sm-2">
                <%= link_to memory.title + "の日記を見る", memory_path(memory.id) %>
              </li>
            </ul>
          </div>
          <div class="img-fluid d-md-inline-block text-center mt-3">
            <% if memory.image.present? %>
              <%= image_tag memory.image.url %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= paginate @memories, class:"pagination" %>

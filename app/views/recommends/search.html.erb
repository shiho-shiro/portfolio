<h1>検索結果</h1>

<% @results.each do |recommend| %>
  <div class="recommend_content">
    <%= recommend.user.username %>
    <%= recommend.created_at.to_s(:datetime_jp) %></br>
    <%= link_to(recommend_path(recommend.id), {class:"menu tr_size"}) do %>
      <%= recommend.title %>
    <% end %>
  </div>
<% end %>
<br>

